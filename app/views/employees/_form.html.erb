          <p class="text-danger"><%= @employee.errors[:middle_name].first %></p>
        <% end %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="form-group">
        <%= form.label :last_name, class: 'mb-2' %>
        <%= form.text_field :last_name, class: 'form-control form-control-lg rounded-0' %>
        <% if @employee.errors.has_key?(:last_name) %>
          <p class="text-danger"><%= @employee.errors[:last_name].first %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <%= form.label :email, class: 'mb-2' %>
        <%= form.email_field :personal_email, class: 'form-control form-control-lg rounded-0' %>
        <% if @employee.errors.has_key?(:personal_email) %>
          <p class="text-danger"><%= @employee.errors[:personal_email].first %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
