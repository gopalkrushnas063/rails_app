      <div class="form-group">
        <%= form.label :country, class: 'mb-2' %>
        <%= form.text_field :country, class: 'form-control form-control-lg rounded-0' %>
        <% if @employee.errors.has_key?(:country) %>
          <p class="text-danger"><%= @employee.errors[:country].first %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 mt-4">
      <%= form.submit class: "btn btn-success btn-lg rounded-0" %>
      <%= link_to "Back to Employees", employees_path, class: "btn btn-outline-primary btn-lg rounded-0"%>
    </div>
  </div>
<% end %>
